@model SupportDesk.Models.Assignment

@if ( HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString().ToLowerInvariant().Equals("edit") && Model.selectList.Count() != 0 )
{
    using (Html.BeginForm(Model.Action, Model.Controller, new { id = Model.ID }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    @Html.DropDownList("S_ID", Model.selectList, htmlAttributes: new { @class = "form-control support_desk_inline_block" })
                    @Html.ValidationMessageFor(model => model.S_ID, "", new { @class = "text-danger" })
                    <input type="submit" value="Add" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
}