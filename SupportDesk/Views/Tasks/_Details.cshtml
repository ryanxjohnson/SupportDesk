@model SupportDesk.Models.Task

<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.Status)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Status)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Summary)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Summary)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Due)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Due)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Priority)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Priority)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Submitted)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Submitted)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Notes)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Notes)
    </dd>

    @if (Model.Employee != null)
    {
        <dt>
            @Html.DisplayNameFor(model => model.Submitter_Employee_ID)
        </dt>

        <dd>
            @Html.ActionLink(Model.Employee.F_Name+" "+Model.Employee.L_Name, "Details", "Employees", new { id = Model.Employee.ID }, null)
        </dd>
    }

    @if (Model.SupportGroup != null)
    {
        <dt>
            @Html.DisplayNameFor(model => model.Assigned_Group_ID)
        </dt>

        <dd>
            @Html.ActionLink(Model.SupportGroup.Name, "Details", "SupportGroups", new { id = Model.SupportGroup.ID }, null)
        </dd>
    }

</dl>